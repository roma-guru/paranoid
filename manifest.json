{
  "description": "P2P encryption in social networks now in your hands",
  "manifest_version": 2,
  "name": "Paranoid",
  "version": "0.0.3",
  "homepage_url": "https://github.com/roma-guru/paranoid",
  "icons": {
    "225": "icon.png"
  },
  "permissions": [
      "storage",
      "tabs",
      "webNavigation"
  ],

  "content_scripts": [
    {
      "matches": ["https://vk.com/*"],
      "js": ["dist/bundle.js"]
    }
  ],

  "browser_action": {
      "default_icon": "icon.png"
  },
  "background": {
      "scripts": ["background/main.js"]
  }
}
